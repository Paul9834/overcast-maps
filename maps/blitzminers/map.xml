<?xml version="1.0"?>
<map proto="1.3.0">
<name>BlitzMiners</name>
<version>2.0.1</version>
<objective>Eliminate the other team to win</objective>
<gamemode>blitz</gamemode>
<authors>
    <author uuid="af9c1942-af66-42d1-89f9-9b677c281e03"/> <!-- _IQ -->
    <author uuid="2a289d2a-d970-49c5-9a6c-01fc0264e317"/> <!-- Stealth5061 -->
</authors>
<blitz>
    <time>6m</time>
    <lives>1</lives>
</blitz>
<teams>
    <team color="blue" max="12">Blue</team>
    <team color="dark red" max="12">Red</team>
</teams>
<spawns>
    <spawn team="blue" kit="blue" yaw="0">
        <cuboid min="16,25,-13" max="14,25,-14"/>
    </spawn>
    <spawn team="red" kit="red" yaw="-180">
        <cuboid min="14,25,27" max="16,25,29"/>
    </spawn>
    <default yaw="-180">
        <cuboid min="11,56,-18" max="12,55,-13"/>
    </default>
</spawns>
<kits>
    <kit name="spawn">
        <item slot="0" enchantment="damage all:2;knockback:1">iron pickaxe</item>
        <item slot="1">bow</item>
        <item slot="2" amount="5">arrow</item>
        <item slot="3" amount="5">bread</item>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="4C72C5" enchantment="protection projectile:4">leather helmet</helmet>
        <chestplate color="4C72C5">leather chestplate</chestplate>
        <leggings color="4C72C5">leather leggings</leggings>
        <boots color="4C72C5">leather boots</boots>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="C5596C" enchantment="protection projectile:4">leather helmet</helmet>
        <chestplate color="C5596C">leather chestplate</chestplate>
        <leggings color="C5596C">leather leggings</leggings>
        <boots color="C5596C">leather boots</boots>
    </kit>
</kits>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
</itemremove>
<toolrepair>
    <tool>iron pickaxe</tool>
    <tool>bow</tool>
</toolrepair>
<killreward>
    <item>arrow</item>
</killreward>
<regions>
    <apply block="deny-all">
        <rectangle min="-oo,-oo" max="oo,oo"/>
    </apply>
</regions>
<include src="blitz-global.xml"/>
</map>
